@using Trivical.Core.Models;
@model List<Question>

<h1>Quiz</h1>
<form id="quizForm">
    @foreach(var question in Model)
    {
        <h3>@question.question.text</h3>
        @foreach(var answer in question.incorrectAnswers)
        {
            <label>
                <input type="radio" value="@answer">
                @answer
            </label>

            <br />
        }
    }
    <button type="submit">Submit</button>
</form>
